# WhaTicket - Configuração de Produção
# Copie este arquivo para .env e preencha os valores

# URLs do Sistema
BACKEND_URL=https://api.seudominio.com
FRONTEND_URL=https://seudominio.com

# Portas (não precisa mudar se usar reverse proxy do EasyPanel)
BACKEND_PORT=8080
FRONTEND_PORT=3003

# Banco de Dados PostgreSQL
DB_NAME=whaticket_prod
DB_USER=whaticket
DB_PASS=SUA_SENHA_SEGURA_AQUI_123!@#

# Redis
REDIS_PASSWORD=SENHA_REDIS_SEGURA_456!@#

# JWT Secrets (gere senhas fortes!)
JWT_SECRET=JWT_SECRET_SUPER_SEGURO_789!@#$%
JWT_REFRESH_SECRET=JWT_REFRESH_SECRET_SUPER_SEGURO_012!@#$%

# Limites
USER_LIMIT=50
CONNECTIONS_LIMIT=10

# Email SMTP (Opcional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USER=seu@email.com
MAIL_PASS=sua_senha_email
MAIL_FROM=seu@email.com

# Gerencianet/Efí (Opcional para pagamentos)
GERENCIANET_SANDBOX=false
GERENCIANET_CLIENT_ID=
GERENCIANET_CLIENT_SECRET=
GERENCIANET_PIX_CERT=
GERENCIANET_PIX_KEY=
